{{$isGlobal := 0}}
{{$name := "Say"}}
{{$lengthSec := 3600}}


{{$id := 0}}
{{$key := joinStr "" "cooldown_" $name}}
{{if eq $isGlobal 0}}
    {{$id = .User.ID}}
{{end}}


{{if dbGet (toInt64 $id) $key}} 
    {{sendMessage nil "Nein, das werde ich jetzt nicht sagen."}}
{{else}}
    {{dbSetExpire (toInt64 $id) $key "cooldown" $lengthSec}}
    {{.StrippedMsg}} 
    {{deleteTrigger 1}}
{{end}}